<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/header.ejs")-%>
  <body>
    <div class="container" id="heading">
      <h1><%=listTitle%></h1>
    </div>
    <%# item box%>
    <div class="container">
      <% for(let list of newListItems){ %>
      <form action="/delete/<%=listTitle%>" method="post">
        <div class="item">
          <input
            type="checkbox"
            name="done"
            value="<%=list._id%>"
            onchange="this.form.submit()"
          />
          <p><%= list.name %></p>
        </div>
      </form>
      <% } %>
      <form class="item" action="/<%=listTitle%>" method="POST">
        <input
          type="text"
          placeholder="New Item"
          name="addList"
          id="addList"
          required
          autocomplete="off"
        />
        <button type="submit" name="list" value="<%=listTitle%>">+</button>
      </form>
    </div>
    <%-include("../partials/footer.ejs")-%>
  </body>
</html>
